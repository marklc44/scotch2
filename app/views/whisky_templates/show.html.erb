<div class="container" ng-controller="ShowWhiskyCtrl">

  <div class="row">
    <div class="col-md-12 info whisky">
      <div>

          <div class="profile-buttons">
            <a class="btn btn-default pull-left" href="/"><i class="fa fa-chevron-left"></i> Back to Search</a>
            <!--<button class="btn btn-default pull-right"><i class="fa fa-heart-o"></i> Add to favorites</button>-->
          </div>

          <div class="info-text">
            <h2>{{whisky.name}}</h2>
            <p>Producer: <a href="/producers/{{whisky.producer.id}}">{{whisky.producer.name}}</a></p>
            <p>Region: {{whisky.region.name}}</p>
            <p>
              <span class="rating">Rating: {{whisky.rating}}</span> |
              <span class="age">Age: {{whisky.age}}</span>
            </p>
        </div>
      </div>
    </div><!-- /.col -->
  </div><!-- /.row -->

  <div class="row">
    <div class="col-sm-12 data-table">
      <h3>Deals on {{whisky.producer.name}} Whisky</h3>
      <table class="table table-hover">
        <thead>
          <th>Region</th>
          <th>Producer</th>
          <th>Name</th>
          <th>Seller</th>
          <th>Price</th>
        </thead>
        <tbody>
          <!--  -->
          <tr ng-repeat="deal in deals | filterNullPrice">
            <td>{{whisky.region.name}}</td>
            <td><a href="/producers/{{whisky.producer.id}}">{{deal.brand}}</a></td>
            <td><a href="{{deal.sitedetails[0].url}}">{{deal.name}}</a></td>
            <td>{{deal.sitedetails[0].name}}</td>
            <td>${{deal.sitedetails[0].latestoffers[0].price}}</td>
          </tr>
        </tbody>
      </table>
    </div><!-- /.col -->
  </div> <!-- /.row -->

</div><!-- /.container -->
